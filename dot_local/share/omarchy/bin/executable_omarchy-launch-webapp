#!/bin/bash

# https://github.com/basecamp/omarchy/discussions/2468

browser=$(xdg-settings get default-web-browser)

case $browser in
  firefox* | waterfox* | librewolf*)
    exec setsid uwsm-app -- $(sed -n 's/^Exec=\([^ ]*\).*/\1/p' {~/.local,~/.nix-profile,/usr}/share/applications/$browser 2>/dev/null | head -1) --no-remote -P "WebApps" --new-window --class WebApp "$1" "${@:2}"
    ;;
  # google-chrome* | brave-browser* | microsoft-edge* | opera* | vivaldi* | helium*)
  *)
    browser="chromium.desktop"
    exec setsid uwsm-app -- $(sed -n 's/^Exec=\([^ ]*\).*/\1/p' {~/.local,~/.nix-profile,/usr}/share/applications/$browser 2>/dev/null | head -1) --app="$1" "${@:2}"
    ;;
esac
