  meta       = black bold
  frag       = magenta
  context    = white
  whitespace = yellow reverse
  old        = red
[color "decorate"]
  HEAD         = red
  branch       = blue
  tag          = yellow
  remoteBranch = magenta
[color "branch"]
  current = magenta
  local = default
  remote = yellow
  upstrean = green
  plain = blue
